{
  "name": "@claro/jira-mcp-server",
  "version": "2.0.0",
  "description": "MCP Server for Jira integration - Claro Digital team (Enhanced with cache, rate limiting, logging, and new features)",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "jira-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "jira",
    "atlassian",
    "model-context-protocol",
    "claro"
  ],
  "author": "Pedro Hedro <pedro.hedro@globalhitss.com.br>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "form-data": "^4.0.1",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
